# Server Configuration
PORT=3000
NODE_ENV=development

# Elasticsearch Configuration
ES_HOST=localhost
ES_PORT=9200
ES_INDEX=products
ES_USERNAME=
ES_PASSWORD=

# Search Configuration
MAX_SUGGESTIONS=10
SEARCH_DEBOUNCE=150

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Performance Settings
CACHE_TTL=300
MAX_QUERY_LENGTH=100

